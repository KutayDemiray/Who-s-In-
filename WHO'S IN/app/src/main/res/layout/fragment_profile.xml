<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue">

    <Button
        android:id="@+id/scoreboard"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="58dp"
        android:layout_marginEnd="53dp"
        android:layout_marginBottom="70dp"
        android:background="@drawable/mybutton_white"
        android:fontFamily="@font/bold"
        android:text="SCOREBOARD"
        android:textColor="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <Button
        android:id="@+id/pastActivities"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@drawable/mybutton_white"
        android:fontFamily="@font/bold"
        android:text="PAST ACTIVITIES"
        android:textColor="@color/colorPrimary"
        app:layout_constraintBottom_toTopOf="@+id/scoreboard"
        app:layout_constraintEnd_toEndOf="@+id/scoreboard"
        app:layout_constraintStart_toStartOf="@+id/scoreboard" />

    <ImageButton
        android:id="@+id/profilePicture"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintBottom_toBottomOf="@+id/nickname"
        app:layout_constraintEnd_toStartOf="@+id/nickname"
        app:layout_constraintHorizontal_bias="0.592"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/nickname"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/eyes" />

    <TextView
        android:id="@+id/nickname"
        android:layout_width="215dp"
        android:layout_height="68dp"
        android:layout_marginTop="160dp"
        android:layout_marginEnd="40dp"
        android:fontFamily="@font/bold"
        android:text="gokiberk"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout3" />

    <Button
        android:id="@+id/myFriends"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@drawable/mybutton_white"
        android:fontFamily="@font/bold"
        android:text="MY FRIENDS"
        android:textColor="@color/colorPrimary"
        app:layout_constraintBottom_toTopOf="@+id/pastActivities"
        app:layout_constraintEnd_toEndOf="@+id/pastActivities"
        app:layout_constraintStart_toStartOf="@+id/pastActivities" />


    <Button
        android:id="@+id/editProfile"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@drawable/mybutton_white"
        android:fontFamily="@font/bold"
        android:text="EDIT PROFILE"
        android:textColor="@color/colorPrimary"
        app:layout_constraintBottom_toTopOf="@+id/myFriends"
        app:layout_constraintEnd_toEndOf="@+id/myFriends"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/myFriends"
        app:layout_constraintTop_toBottomOf="@+id/nickname"
        app:layout_constraintVertical_bias="0.958" />

    <ImageButton
        android:id="@+id/buttonSignOut"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="66dp"
        android:layout_height="66dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="40dp"

        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/logout"
        android:tint="@color/darkBlue"
        app:layout_constraintBottom_toTopOf="@+id/nickname"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.95"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.714" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout3"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/nickname"
        tools:layout_editor_absoluteX="1dp">

    </com.google.android.material.textfield.TextInputLayout>

</androidx.constraintlayout.widget.ConstraintLayout>